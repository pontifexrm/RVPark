@page "/Auth/Login"
@layout MainLayout
@inject IMediator Mediator
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Log in</PageTitle>

<h1>Log in</h1>

<div class="row">
    <div class="col-lg-6">
        <section>
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @_errorMessage
                </div>
            }

            <EditForm Model="_model" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <h2>Use a local account to log in.</h2>
                <hr />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="form-floating mb-3">
                    <InputText @bind-Value="_model.Email" id="email" class="form-control"
                               autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="email">Email</label>
                    <ValidationMessage For="() => _model.Email" class="text-danger" />
                </div>

                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="_model.Password" id="password"
                               class="form-control" autocomplete="current-password"
                               aria-required="true" placeholder="password" />
                    <label for="password">Password</label>
                    <ValidationMessage For="() => _model.Password" class="text-danger" />
                </div>

                <div class="checkbox mb-3">
                    <label class="form-label">
                        <InputCheckbox @bind-Value="_model.RememberMe" class="darker-border-checkbox form-check-input" />
                        Remember me
                    </label>
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary" disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span> Logging in...</span>
                        }
                        else
                        {
                            <span>Log in</span>
                        }
                    </button>
                </div>

                <div class="mt-3">
                    <p><a href="Account/ForgotPassword">Forgot your password?</a></p>
                    <p><a href="@GetRegisterUrl()">Register as a new user</a></p>
                    <p><a href="Account/ResendEmailConfirmation">Resend email confirmation</a></p>
                </div>
            </EditForm>
        </section>
    </div>
</div>

@* Hidden form for SSR login submission *@
<form id="loginForm" method="post" action="/Account/PerformLogin" style="display:none;">
    <input type="hidden" name="email" id="loginEmail" />
    <input type="hidden" name="password" id="loginPassword" />
    <input type="hidden" name="rememberMe" id="loginRememberMe" />
    <input type="hidden" name="returnUrl" id="loginReturnUrl" />
</form>

@code {
    private LoginModel _model = new();
    private string? _errorMessage;
    private bool _isLoading;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? Error { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Error))
        {
            _errorMessage = Uri.UnescapeDataString(Error.Replace("+", " "));
        }
    }

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            // Validate credentials via MediatR
            var result = await Mediator.Send(new LoginCommand(
                _model.Email,
                _model.Password,
                _model.RememberMe
            ));

            if (result.Succeeded)
            {
                // Submit the hidden form to perform actual cookie sign-in
                await JSRuntime.InvokeVoidAsync("eval", $@"
                    document.getElementById('loginEmail').value = '{EscapeJs(_model.Email)}';
                    document.getElementById('loginPassword').value = '{EscapeJs(_model.Password)}';
                    document.getElementById('loginRememberMe').value = '{_model.RememberMe.ToString().ToLower()}';
                    document.getElementById('loginReturnUrl').value = '{EscapeJs(ReturnUrl ?? "/")}';
                    document.getElementById('loginForm').submit();
                ");
            }
            else if (result.RequiresTwoFactor)
            {
                NavigationManager.NavigateTo($"/Account/LoginWith2fa?returnUrl={ReturnUrl}&rememberMe={_model.RememberMe}", forceLoad: true);
            }
            else if (result.IsLockedOut)
            {
                NavigationManager.NavigateTo("/Account/Lockout", forceLoad: true);
            }
            else if (result.RequiresEmailConfirmation)
            {
                _errorMessage = "You must confirm your email before logging in.";
                _isLoading = false;
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Invalid login attempt.";
                _isLoading = false;
            }
        }
        catch (FluentValidation.ValidationException ex)
        {
            _errorMessage = string.Join(", ", ex.Errors.Select(e => e.ErrorMessage));
            _isLoading = false;
        }
        catch (Exception)
        {
            _errorMessage = "An error occurred during login. Please try again.";
            _isLoading = false;
        }
    }

    private string GetRegisterUrl()
    {
        var baseUrl = "Auth/Register";
        if (!string.IsNullOrEmpty(ReturnUrl))
        {
            return $"{baseUrl}?ReturnUrl={Uri.EscapeDataString(ReturnUrl)}";
        }
        return baseUrl;
    }

    private static string EscapeJs(string value)
    {
        return value?.Replace("\\", "\\\\").Replace("'", "\\'").Replace("\n", "\\n").Replace("\r", "\\r") ?? "";
    }

    private class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.EmailAddress]
        public string Email { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.DataType(System.ComponentModel.DataAnnotations.DataType.Password)]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}
