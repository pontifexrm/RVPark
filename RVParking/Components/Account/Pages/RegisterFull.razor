@page "/Account/RegisterFull"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using RVParking.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<RegisterFull> Logger
@inject NavigationManager NavigationManager
@inject ApplicationDbContext ApplicationDbContext

<PageTitle>Register Full</PageTitle>

<h1>Register (Full Details)</h1>

<div class="row">
    <div class="col-lg-6">
        <StatusMessage Message="@Message" />
        @if (!codesSent)
        {
            <EditForm Model="RegistrationInput" OnSubmit="@SendConfirmationCodes" FormName="SendCodesForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.Email" class="form-control" placeholder="Email" />
                    <label>Email</label>
                    <ValidationMessage For="() => RegistrationInput.Email" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="RegistrationInput.Password" class="form-control" placeholder="Password" />
                    <label>Password</label>
                    <ValidationMessage For="() => RegistrationInput.Password" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="RegistrationInput.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <label>Confirm Password</label>
                    <ValidationMessage For="() => RegistrationInput.ConfirmPassword" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.FirstName" class="form-control" placeholder="First Name" />
                    <label>First Name</label>
                    <ValidationMessage For="() => RegistrationInput.FirstName" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.LastName" class="form-control" placeholder="Last Name" />
                    <label>Last Name</label>
                    <ValidationMessage For="() => RegistrationInput.LastName" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.Mobile" class="form-control" placeholder="Mobile" />
                    <label>Mobile Phone</label>
                    <ValidationMessage For="() => RegistrationInput.Mobile" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.City" class="form-control" placeholder="City" />
                    <label>City</label>
                    <ValidationMessage For="() => RegistrationInput.City" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.Country" class="form-control" placeholder="Country" />
                    <label>Country</label>
                    <ValidationMessage For="() => RegistrationInput.Country" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="RegistrationInput.NZMCA" class="form-control" placeholder="NZMCA #" />
                    <label>NZMCA #</label>
                    <ValidationMessage For="() => RegistrationInput.NZMCA" class="text-danger" />
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Send Confirmation Codes</button>
            </EditForm>
        }
        else
        {
            <EditForm Model="CodeInput" OnValidSubmit="@ValidateCodesAndRegister" FormName="ValidateCodesForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />
                <div class="form-floating mb-3">
                    <InputText @bind-Value="CodeInput.EmailCode" class="form-control" placeholder="Email Code" />
                    <label>Email Confirmation Code</label>
                    <ValidationMessage For="() => CodeInput.EmailCode" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText @bind-Value="CodeInput.SmsCode" class="form-control" placeholder="SMS Code" />
                    <label>SMS Confirmation Code</label>
                    <ValidationMessage For="() => CodeInput.SmsCode" class="text-danger" />
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-success">Register</button>
            </EditForm>
        }
    </div>
</div>

@code {
    private bool codesSent = false;
    private IEnumerable<IdentityError>? identityErrors;
    private string? generatedEmailCode;
    private string? generatedSmsCode;
    private RegistrationInputModel RegistrationInput { get; set; } = new();
    private CodeInputModel CodeInput { get; set; } = new();

    private string? Message => identityErrors is null ? null : $"Error: {string.Join(", ", identityErrors.Select(error => error.Description))}";

    private string GenerateCode() => new Random().Next(100000, 999999).ToString();

    private async Task SendConfirmationCodes()
    {
        generatedEmailCode = GenerateCode();
        generatedSmsCode = GenerateCode();

        // Send email code
        // await EmailSender.SendEmailAsync(RegistrationInput.Email, "Your Email Confirmation Code", $"Your code: {generatedEmailCode}");

        // Send SMS code
        // await SmsSender.SendSmsAsync(RegistrationInput.Mobile, $"Your SMS confirmation code: {generatedSmsCode}");

        codesSent = true;
    }

    private async Task ValidateCodesAndRegister()
    {
        if (CodeInput.EmailCode != generatedEmailCode || CodeInput.SmsCode != generatedSmsCode)
        {
            identityErrors = new[] { new IdentityError { Description = "Invalid confirmation codes." } };
            return;
        }

        var user = new ApplicationUser
        {
            Email = RegistrationInput.Email,
            UserName = RegistrationInput.Email,
            FirstNames = RegistrationInput.FirstName,
            LastName = RegistrationInput.LastName,
            PhoneNumber = RegistrationInput.Mobile,
            City = RegistrationInput.City,
            Country = RegistrationInput.Country,
            NZMCA = RegistrationInput.NZMCA,
            CreatedDte = DateTime.Now
        };

        var result = await UserManager.CreateAsync(user, RegistrationInput.Password);

        if (!result.Succeeded)
        {
            identityErrors = result.Errors;
            return;
        }

        await SignInManager.SignInAsync(user, isPersistent: false);
        NavigationManager.NavigateTo("/");
    }

    private sealed class RegistrationInputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        public string FirstName { get; set; } = "";

        [Required]
        public string LastName { get; set; } = "";

        [Required]
        [RegularExpression(@"^\+?[1-9]\d{1,14}$", ErrorMessage = "The phone number is not valid.")]
        [DataType(DataType.PhoneNumber)]
        public string Mobile { get; set; } = "";

        [Required]
        public string City { get; set; } = "";

        [Required]
        public string Country { get; set; } = "";

        [Required]
        public string NZMCA { get; set; } = "";

        [Required]
        [StringLength(100, MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [DataType(DataType.Password)]
        [Compare("Password", ErrorMessage = "The password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }

    private sealed class CodeInputModel
    {
        [Required]
        public string EmailCode { get; set; } = "";
        [Required]
        public string SmsCode { get; set; } = "";
    }
}