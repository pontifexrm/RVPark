                </Syncfusion.Blazor.Navigations.AccordionItem>
                <Syncfusion.Blazor.Navigations.AccordionItem>
                    <HeaderTemplate>
                        <h4 class="card-title">User Visit Statistics</h4>
                    </HeaderTemplate>
                    <ContentTemplate>
                        @if (userVisitStats != null)
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
