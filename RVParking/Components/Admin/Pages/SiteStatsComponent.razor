                                            <th>Location</th>
                                            <th>Count24h</th>
                                            <th>CountWeek</th>
                                            <th>CountMonth</th>
                                            <th>CountYear</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var locn in userVisitStats)
                                        {
                                            <tr>
                                                <td>@locn.UserNameIpAddr</td>
                                                <td>@locn.Location</td>
                                                <td>@locn.Count24h</td>
                                                <td>@locn.CountWeek</td>
                                                <td>@locn.CountMonth</td>
                                                <td>@locn.CountYear</td>
