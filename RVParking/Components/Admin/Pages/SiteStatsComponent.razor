<h3>Retreive Log data from RVPark and Display Stats</h3>
<p>
    This page allows you to manually trigger the transfer of log data from the RVPark.nz website to the local database,
    and view statistics on login attempts and visit logs.
</p>
<button type="button" class="btn btn-secondary" @onclick="GetLoginStats"> Refresh and Show Statistics </button>
<br />
<br />
    <SfAccordion  Width="98%" ExpandMode="ExpandMode.Single">
        <Syncfusion.Blazor.Navigations.AccordionItems>
            <Syncfusion.Blazor.Navigations.AccordionItem >
                <HeaderTemplate>
                        <h4 class="card-title">Login Statistics</h4>
                </HeaderTemplate>
                <ContentTemplate>
                        @if (loginStats != null)
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Time Period</th>
                                            <th>Successful Logins</th>
                                            <th>Failed Logins</th>
                                            <th>TOTAL Logins</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Last 24 Hours</td>
                                            <td>@loginStats.SuccessLast24Hours</td>
                                            <td>@loginStats.FailedLast24Hours</td>
                                            <td>@loginStats.TotalLoginAttempts24Hours</td>
                                        </tr>
                                        <tr>
                                            <td>Last Week</td>
                                            <td>@loginStats.SuccessLastWeek</td>
                                            <td>@loginStats.FailedLastWeek</td>
                                            <td>@loginStats.TotalLoginAttemptsWeek</td>
                                        </tr>
                                        <tr>
                                            <td>Last Month</td>
                                            <td>@loginStats.SuccessLastMonth</td>
                                            <td>@loginStats.FailedLastMonth</td>
                                            <td>@loginStats.TotalLoginAttemptsMonth</td>
                                        </tr>
                                        <tr>
                                            <td>Last Year</td>
                                            <td>@loginStats.SuccessLastYear</td>
                                            <td>@loginStats.FailedLastYear</td>
                                            <td>@loginStats.TotalLoginAttemptsYear</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        }
                </ContentTemplate>
            </Syncfusion.Blazor.Navigations.AccordionItem>
                <Syncfusion.Blazor.Navigations.AccordionItem>
                    <HeaderTemplate>
                        <h4 class="card-title">Pages Visited Statistics</h4>
                    </HeaderTemplate>
                    <ContentTemplate>
                        @if (visitStats != null)
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Location</th>
                                            <th>Count24h</th>
                                            <th>Unique24h</th>
                                            <th>CountWeek</th>
                                            <th>UniqueWeek</th>
                                            <th>CountMonth</th>
                                            <th>UniqueMonth</th>
                                            <th>CountYear</th>
                                            <th>UniqueYear</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var locn in visitStats)
                                        {
                                            <tr>
                                                <td>@locn.Location</td>
                                                <td>@locn.Count24h</td>
                                                <td>@locn.UniqueUsers24h</td>
                                                <td>@locn.CountWeek</td>
                                                <td>@locn.UniqueUsersWeek</td>
                                                <td>@locn.CountMonth</td>
                                                <td>@locn.UniqueUsersMonth</td>
                                                <td>@locn.CountYear</td>
                                                <td>@locn.UniqueUsersYear</td>
