<style>
    html, body, #app {
      height: 100%;
    }

    .nav-scrollable {
      display: flex;
      flex-direction: column;
      height: calc(100vh - 56px);
    }
    /* The nav becomes the scrollable area and sits above the pinned footer */
    .nav-scrollable nav {
        position: relative;
        z-index: 2; /* ensure nav content renders above the nav-bottom */
        flex: 1 1 auto;
        overflow: auto;
    }

    /* Pinned bottom item */
    .nav-scrollable .nav-bottom {
            position: absolute; /* pin to bottom of the .nav-scrollable container */
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1; /* lower than nav so nav items can scroll over (hide) it */
            text-align: left; /* default: left aligned */
            padding: 0.5rem 1rem; /* mirror nav item padding */
            background: transparent;
            display: flex;
            align-items: center;
            gap: 0.5rem;
    }
            /* Force left alignment and override other CSS that might push the item right */
            .nav-scrollable .nav-bottom.left {
                justify-content: flex-start !important;
                text-align: left !important;
            }

                /* Ensure the anchor and image do not have auto margins pushing them right */
                .nav-scrollable .nav-bottom.left a,
                .nav-scrollable .nav-bottom.left img {
                    margin: 0 !important;
                }

                .nav-scrollable .nav-bottom.left img {
                    display: inline-block;
                    height: auto;
                    max-width: 100%;
                }

            /* Center variation, if needed later */
            .nav-scrollable .nav-bottom.center {
                justify-content: center;
            }
